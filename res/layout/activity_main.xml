<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <EditText
        android:id="@+id/edit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/button1"
        android:ems="10"
        android:hint="@string/edit_message" />

    <SeekBar
        android:id="@+id/volBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button1"
        android:layout_weight="1" />

    <RelativeLayout
        android:id="@+id/piano_keys"
        android:layout_width="100dp"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/volBar"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/piano_key_c"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/piano_key"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/piano_key_d"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:background="@drawable/piano_key"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/piano_key_e"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="100dp"
            android:background="@drawable/piano_key"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/piano_key_f"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="150dp"
            android:background="@drawable/piano_key"
            android:orientation="horizontal" >

        </LinearLayout>
        <LinearLayout
            android:id="@+id/piano_key_g"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="200dp"
            android:background="@drawable/piano_key"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/piano_key_a"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="250dp"
            android:background="@drawable/piano_key"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/piano_key_b"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="300dp"
            android:background="@drawable/piano_key"
            android:orientation="horizontal" >
        </LinearLayout>

        <!--LinearLayout
            android:id="@+id/piano_key_c"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="350dp"
            android:background="@drawable/piano_key"
            android:orientation="horizontal" >

        </LinearLayout-->


        <LinearLayout
            android:id="@+id/piano_key_cs"
            android:layout_width="40dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:background="@drawable/black_key"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/piano_key_eb"
            android:layout_width="40dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="80dp"
            android:background="@drawable/black_key"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/piano_key_fs"
            android:layout_width="40dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="180dp"
            android:background="@drawable/black_key"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/piano_key_ab"
            android:layout_width="40dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="230dp"
            android:background="@drawable/black_key"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/piano_key_bb"
            android:layout_width="40dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="280dp"
            android:background="@drawable/black_key"
            android:orientation="horizontal" >
        </LinearLayout>
        
    </RelativeLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_message"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="gotoRecordings"        
        android:text="Recordings" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button2"
        android:onClick="sendMessage"
        android:text="@string/button_send" />
    
</RelativeLayout>